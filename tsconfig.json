{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@cli": ["cli/"],
      "@compiler": ["compiler/"],
      "@core": ["core/"],
      "@lib": ["./"],
      "@loader": ["loader/"],
      "@parrots": ["parrots/"],
      "@scaffold": ["scaffold/"],
      "@settings": ["settings/"]
    },
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es5", "es6", "es7", "esnext", "dom", "dom.iterable"],
    "jsx": "react"
  },
  "include": ["src/**/*", "test/**/*"],
  "types": ["node", "react", "react-dom"],
  "typeRoots": ["node_modules/@types"]
}
